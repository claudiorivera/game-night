{
  "name": "game-night-server",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "yarn --cwd client install && yarn --cwd client build",
    "dev-server": "nodemon --ignore /client ./bin/www",
    "dev-server-start": "DEBUG=game-night-server:* yarn run dev-server",
    "client-start": "yarn --cwd client start",
    "client-install": "yarn --cwd client",
    "dev": "concurrently --names 'SERVER,CLIENT' -c 'bgBlue.bold,bgMagenta.bold' 'yarn run dev-server-start' 'yarn run client-start'"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "morgan": "^1.10.0",
    "pg-promise": "^10.5.6"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  }
}
