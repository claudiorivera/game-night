{
  "name": "game-night-server",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "yarn --cwd client install && yarn --cwd client build",
    "dev-server": "nodemon --ignore client ./bin/www",
    "dev-server-start": "DEBUG=game-night-server:* yarn run dev-server",
    "client-start": "yarn --cwd client start",
    "client-install": "yarn --cwd client",
    "dev": "concurrently --kill-others --names 'SERVER,CLIENT,DEVTOOLS' -c 'bgBlue.bold,bgMagenta.bold,bgYellow.bold' 'yarn run dev-server-start' 'yarn run client-start' 'react-devtools'"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^3.22.0",
    "mongoose": "^5.9.17",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "react-devtools": "^4.7.0"
  }
}
